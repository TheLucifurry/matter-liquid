{
  "compilerOptions": {
    "outDir": "./build",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
  },
  "exclude": ["build", "node_modules"]
}